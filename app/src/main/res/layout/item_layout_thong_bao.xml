<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TBTatca"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    >

    <LinearLayout
        android:id="@+id/linee_tvTieuDe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/boder_tron_colorwhite"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="25dp">
        <TextView
            android:id="@+id/tv_TieuDe_thongBao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Thông báo tiền nhà"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="22dp" />
        <TextView
            android:id="@+id/tv_noiDung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginBottom="5dp"
            android:text="Chuẩn bị hết hạn hợp đồng rồi nha mọi người"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/mauChinhApp"
        android:layout_marginTop="10dp"
        >
        <TextView
        android:id="@+id/tv_ngayTB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21-02-2023"
        android:textSize="18dp"
        android:padding="2dp"
        android:textColor="@color/white"
        />
    </LinearLayout>

    <View
        android:id="@+id/looo"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/linee_tvTieuDe"
        android:background="#BDBDBD" />

</RelativeLayout>