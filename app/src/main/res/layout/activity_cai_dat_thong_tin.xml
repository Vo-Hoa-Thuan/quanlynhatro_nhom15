<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mauNenApp"
    tools:context=".activity.ActivityCaiDatThongTin">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbThongTinChuNha"
        style="@style/toolBar"
        app:title="Cài đặt"
        />
    <!--    <androidx.recyclerview.widget.RecyclerView-->
    <!--        android:id="@+id/rcyThongTinChuNha"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>-->
    <ImageView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/avatar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boder_coc_giu_cho"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên chủ nhà"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/tvTenChuNha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:text="thanh"
            android:paddingLeft="10dp"
            android:background="@drawable/boder_coc_giu_cho"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boder_coc_giu_cho"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/tvSoDienThoai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:text="0867222221"
            android:paddingLeft="10dp"
            android:background="@drawable/boder_coc_giu_cho"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearSoTaiKhoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boder_coc_giu_cho"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvSTK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số tài khoản"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/edSoTaiKhoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textColorHint="@color/black"
            android:text="0867222221"
            android:background="@drawable/boder_tron_colorwhite"
            android:paddingLeft="10dp"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearNgaySinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boder_coc_giu_cho"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvNS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày sinh"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColorHint="@color/black"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/edNgaySinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textColorHint="@color/black"
            android:text="02/05/2003"
            android:paddingLeft="10dp"
            android:background="@drawable/boder_tron_colorwhite"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btnCapNhatThongTin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="Cập nhật thông tin"/>
</LinearLayout>