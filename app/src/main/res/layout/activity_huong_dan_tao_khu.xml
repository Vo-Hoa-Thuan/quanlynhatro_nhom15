<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/mauNoiBatNen"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgHuongDanTaoKhu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/banner_huongdan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnHuongDanTaoKhu"
        style="@style/button"
        android:layout_width="225dp"
        android:layout_height="57dp"
        android:layout_marginStart="108dp"

        android:layout_marginTop="572dp"
        android:drawableLeft="@drawable/baseline_add_24"
        android:text="Tạo khu trọ"
        app:layout_constraintStart_toStartOf="@+id/imgHuongDanTaoKhu"
        app:layout_constraintTop_toTopOf="@+id/imgHuongDanTaoKhu" />

</androidx.constraintlayout.widget.ConstraintLayout>